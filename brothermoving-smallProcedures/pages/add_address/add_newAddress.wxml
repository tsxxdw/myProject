<view class="container">
  <view style="width:100%;">
    <image mode="widthFix" style="width:100%;" src="/images/logo_1.png"></image>
  </view>
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-wrap">
        <view class="label">联系人</view>
        <view class="label-right">
          <input name="fullName" class="input" type="text" placeholder="姓名" value="{{fullName}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">手机号码</view>
        <view class="label-right">
          <input name="phone" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="{{phone}}" />
        </view>
      </view>
      <view class="row-wrap" bindtap="selectCity">
        <view class="label">选择地区</view>
        <picker bindchange="bindPickerProvinceChange" range="{{provinces}}">
          <view class="picker {{selProvince=='请选择'?'hui':''}}">
            {{selProvince}}
          </view>
        </picker>
        <picker bindchange="bindPickerCityChange" range="{{citys}}">
          <view class="picker {{selCity=='请选择'?'hui':''}}">
            {{selCity}}
          </view>
        </picker>
        <picker bindchange="bindPickerChange" range="{{districts}}">
          <view class="picker {{selDistrict=='请选择'?'hui':''}}">
            {{selDistrict}}
          </view>
        </picker>
      </view>
      <view class="addr-details">
        <view class="label">详细地址</view>
          <!--<input class="input" type="text" placeholder="街道门牌信息"/>-->
          <input name="address" style="width:100%;height:100%" placeholder="街道门牌信息" value="" />
      </view>
      <view class="row-wrap">
        <view class="label">备注</view>
          <input style="width:100%;height:100%" name="remark"  placeholder="备注" value="{{remark}}" />
      </view>
    </view>
    <button type="warn" class="save-btn" formType="submit">保存</button>
    
   
  </form>
</view>