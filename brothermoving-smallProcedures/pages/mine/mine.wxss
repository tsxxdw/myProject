  background: #0c8fff;
}

.header1 {
  margin: auto;
  height: 140px;
}

.person-container {
  margin-top: 30px;
  margin-left: 20px;
  display: flex;
}

.info-box {
 margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info {
  display: flex;
  align-items: center;
}

.name {
  font-size: 38rpx;
  font-weight: 500;
  color: #fff;
  line-height: 38rpx;
  margin-right: 26rpx;
}

.intro {
  font-size: 25rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.75);
}

.position {
  display: flex;
  align-items: center;
  border-left: 2rpx solid rgba(255, 255, 255, 0.5);
  padding-left: 17rpx;
  height: 24rpx;
}





.follow-container {
  background: #fff;
  height: 80px;
  border-radius: 8rpx;
  transform: translateY(100px);
  display: flex;
  align-items: center;
}

.follow-container .follow-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #e5e5e5;
  height: 75rpx;
  padding-bottom: 10rpx;
}

.follow-container .follow-item:last-child {
  border: none;
}

.follow-container .follow-item>text:first-child {
  font-size: 48rpx;
  font-weight: 400;
  color: #333;
  line-height: 0em;
}

.follow-container .follow-item>text:last-child {
  font-size: 24rpx;
  font-weight: 400;
  color: #555;
}

.follow {
  background: #fff !important;
}

.follow text {
  font-size: 24rpx !important;
  font-weight: 400 !important;
  color: #0c8fff !important;
}

.attention {
